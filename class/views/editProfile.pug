extends layouts/main

block content
  .form-container
    form(action=routes.editProfile, method="post")
      .fileUpload
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", require=true)
      input(type="text", placeholder="Name", name="name", require=true)
      input(type="email", placeholder="Email", name="email", require=true)
      input(type="submit", value="Update Profile")
    a.form-container__link(href=routes.changePassword)
      button Change Password